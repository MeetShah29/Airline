        android:textColor="@color/black"
        android:textSize="18sp"
         
        tools:text="Hello" />

    <TextView
        android:id="@+id/destination_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
